<%= form_for(national_survey) do |f| %>

  <div class="field">
    <%= f.label "Please select your JB Region." %>
    <%= f.text_field :jb_region %>
  </div>

  <div class="field">
    <%= f.label "Please select your JB Neighborhood." %>
    <%= f.text_field :jb_neighborhood %>
  </div>

  <div class="field">
    <%= f.label "Select your number of chapters." %>
    <%= f.number_field :num_chapters %>
  </div>

  <div class="field">
    <%= f.label "Select your national JB." %>
    <%= f.text_field :national_jb %>
  </div>

  <div class="field">
    <%= f.label "Please describe the leadership/composition of national JB board, if you have one." %>
    <%= f.text_field :leadership_composition %>
  </div>

  <div class="field">
    <%= f.label "How many national JB events do you have per year?" %>
    <%= f.number_field :national_events %>
  </div>

  <div class="field">
    <%= f.label "How many JBers, on average, are active participants in your JB?" %>
    <%= f.number_field :num_active %>
  </div>

  <div class="field">
    <%= f.label "How many JBers, on average, are active participants in your national JB?" %>
    <%= f.number_field :num_active_national %>
  </div>

  <div class="field">
    <%= f.label "Would you say your National JB is composed of more:" %>
    <%= f.text_field :gender_ratio %>
  </div>

  <div class="field">
    <%= f.label "The relationship between my JB and my CISV NA/PA's board is good." %>
    <%= f.check_box :S3Q1 %>
  </div>

  <div class="field">
    <%= f.label "My JB participates in neighborhood projects." %>
    <%= f.check_box :S3Q2 %>
  </div>

  <div class="field">
    <%= f.label "How many JBers from your NA have attended your most recent neighborhood workshop?" %>
    <%= f.number_field :S3Q3 %>
  </div>

  <div class="field">
    <%= f.label "My JB participates in regional projects." %>
    <%= f.check_box :S3Q4 %>
  </div>

  <div class="field">
    <%= f.label "How many JBers from your NA attended your most recent regional meeting?" %>
    <%= f.number_field :S3Q5 %>
  </div>

  <div class="field">
    <%= f.label "As NJRs, we constantly are always in touch with our Junior Branch Regional Team (e.g. AJB Team, APJB Team, EJB Team)." %>
    <%= f.check_box :S3P1Q1 %>
  </div>

  <div class="field">
    <%= f.label "Our coordinator and our regional team represent us." %>
    <%= f.check_box :S3P1Q2 %>
  </div>

  <div class="field">
    <%= f.label "The regional team is responsive to our needs." %>
    <%= f.check_box :S3P1Q3 %>
  </div>

  <div class="field">
    <%= f.label "Tools and information provided by the regional team are useful and helpful." %>
    <%= f.check_box :S3P1Q4 %>
  </div>

  <div class="field">
    <%= f.label "Our coordinator is up to date with our national JB." %>
    <%= f.check_box :S3P1Q5 %>
  </div>

  <div class="field">
    <%= f.label "We are up to date with the work of our Regional team." %>
    <%= f.check_box :S3P1Q6 %>
  </div>

  <div class="field">
    <%= f.label "My JB Participates in international projects (e.g. Branch out, Dig In... Please specify)." %>
    <%= f.check_box :S3P2Q1 %>
  </div>

  <div class="field">
    <%= f.label "We feel that the work developed by IJB Team contributes to our national JB." %>
    <%= f.check_box :S3P2Q2 %>
  </div>

  <div class="field">
    <%= f.label "How many JBers from your NA attended the last IJBC (International Junior Branch Conference)?" %>
    <%= f.number_field :S3P2Q3 %>
  </div>

  <div class="field">
    <%= f.label "Funded, Partially funded, Not funded" %>
    <%= f.text_field :S3P2Q4 %>
  </div>

  <div class="field">
    <%= f.label "If yes, by whom were the funded?" %>
    <%= f.text_field :S3P2Q5 %>
  </div>

  <div class="field">
    <%= f.label "As NJRs, we constatnly communicate with the LJRs." %>
    <%= f.check_box :S4P1Q1 %>
  </div>

  <div class="field">
    <%= f.label "Which are the most effective methods of communication you use to keep in touch with LJRs?" %>
    <%= f.text_field :S4P1Q2 %>
  </div>

  <div class="field">
    <%= f.label "In 2015, Educational Content was very explored at our national trainings/workshops/meetings." %>
    <%= f.check_box :S4P2Q1 %>
  </div>

  <div class="field">
    <%= f.label "Our national JB develops consistent Educational Content projects." %>
    <%= f.check_box :S4P2Q2 %>
  </div>

  <div class="field">
    <%= f.label "Does your national JB have a national training for JBers?" %>
    <%= f.check_box :S4P3Q1 %>
  </div>

  <div class="field">
    <%= f.label "Does your national JB have a specific trainings for LJRs?" %>
    <%= f.check_box :S4P3Q2 %>
  </div>

  <div class="field">
    <%= f.label "Does your national JB have trainings for local JBs?" %>
    <%= f.check_box :S4P3Q3 %>
  </div>

  <div class="field">
    <%= f.label "Does your national JB have documents to describe the role of a JB?" %>
    <%= f.check_box :S4P3Q4 %>
  </div>

  <div class="field">
    <%= f.label "Our national JB does a consistent yearly evaluation." %>
    <%= f.check_box :S4P4Q1 %>
  </div>

  <div class="field">
    <%= f.label "Our national JB does a yearly strategic planning." %>
    <%= f.check_box :S4P4Q2 %>
  </div>

  <div class="field">
    <%= f.label "Our national JB follows the development of local JBs during the year." %>
    <%= f.check_box :S4P4Q3 %>
  </div>

  <div class="field">
    <%= f.label "Do the NJRs have a Midway-Meeting? Online, In-person, No" %>
    <%= f.text_field :S4P4Q4 %>
  </div>

  <div class="field">
    <%= f.label "Do you know who your National Risk Manager is?" %>
    <%= f.check_box :S5Q1 %>
  </div>

  <div class="field">
    <%= f.label "Our national Risk Manager is aware of all the activities organized by the JB." %>
    <%= f.check_box :S5Q2 %>
  </div>

  <div class="field">
    <%= f.label "Do you have any recommendations or comments for the JB set group?" %>
    <%= f.text_field :S6Q1 %>
  </div>

  <div class="field">
    <%= f.label "Does filling JB SET help your JB somehow? If yes, how? If not, why?" %>
    <%= f.text_field :S6Q2 %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
