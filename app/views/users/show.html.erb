<div class="row">
  <div class="col-md-12">
    <h1><%= @user.first_name %>'s profile</h1>
    <hr/>
    <br>
    <% if !@user.background_info %>
      <%= link_to "Background Info", new_user_background_info_path(@user.username), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Edit Background Info", edit_background_info_path(@user.background_info), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>