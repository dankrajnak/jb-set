<% provide(:title, "Profile") %>
<div class="row">
  <div class="col-md-12">
    <h1><%= @user.first_name %>'s Profile <%= link_to (image_tag("/assets/pencil.jpg", width: "15px", height: "15px", :alt => "Edit profile")), edit_user_path(current_user.username) %></h1>
    <hr/>

    <!-- needs to be better formatted -->
    <table id="profile-info-table">
      <tr>
        <td>First Name:&nbsp;</td>
        <td><%= current_user.first_name %></td>
      </tr>
      <tr>
        <td>Last Name:&nbsp;</td>
        <td><%= current_user.last_name %></td>
      </tr>
      <tr>
        <td>Username:&nbsp;</td>
        <td><%= current_user.username %></td>
      </tr>
      <tr>
        <td>Email:&nbsp;</td>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <td>Password:&nbsp;</td>
        <td>******</td>
      </tr>
    </table>

    <h3>Surveys! </h3>
    <hr/>
    <% if !@user.local_survey %>
      <%= link_to "Local Survey", new_user_local_survey_path(@user.username), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Edit Local Survey", edit_local_survey_path(@user.local_survey), class: "btn btn-primary" %>
    <% end %>
    <br><hr/>

  </div>
</div>
