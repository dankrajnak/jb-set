<% provide(:title, "Profile") %>
<div class="row">
  <div class="col-md-12">
    <h1><%= @user.first_name %>'s Profile</h1>

    <hr/>
    <div class="no-padding container">
      <div class="no-padding col-md-6">
        <h3>Your information <%= link_to (image_tag("/assets/pencil.jpg", width: "15px", height: "15px", :alt => "Edit profile")), edit_user_path(@user.username) %></h3>
        <table>
          <tr>
            <td>First Name:&nbsp;</td>
            <td><%= current_user.first_name %></td>
          </tr>
          <tr>
            <td>Last Name:&nbsp;</td>
            <td><%= current_user.last_name %></td>
          </tr>
          <tr>
            <td>Username:&nbsp;</td>
            <td><%= current_user.username %></td>
          </tr>
          <tr>
            <td>Email:&nbsp;</td>
            <td><%= current_user.email %></td>
          </tr>
        </table>
      </div>
      <div class="col-md-6">
        <h3>Surveys taken</h3>
        <table>
          <% if !@user.local_survey && !@user.national_survey %>
            <tr>
              <td>None! Get started below.</td>
            </tr>
          <% else %>
            <% if @user.local_survey %>
              <tr>
                <td>Local Survey</td>
              </tr>
            <% end %>
            <% if @user.national_survey %>
              <tr>
                <td>National Survey</td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    </div>

    <hr />
    <h3>Surveys</h3>
    <% if !@user.local_survey %>
      <%= link_to "Take Local Survey", new_user_local_survey_path(@user.username), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Edit Local Survey", edit_local_survey_path(@user.local_survey), class: "btn btn-warning" %>
    <% end %>

    <br /><br />
    <% if !@user.national_survey %>
      <%= link_to "Take National Survey", new_user_national_survey_path(@user.username), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Edit National Survey", edit_national_survey_path(@user.national_survey), class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
